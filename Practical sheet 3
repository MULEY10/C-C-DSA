Program 5: 

#include <stdio.h>

int main() {
    int units;
    double bill = 0;

    printf("Enter the number of units consumed: ");
    scanf("%d", &units);

    if (units <= 100) {
        bill = units * 5;
    } else if (units <= 300) {
        bill = 100 * 5 + (units - 100) * 7;
    } else {
        bill = 100 * 5 + 200 * 7 + (units - 300) * 10;
    }

    printf("Total bill: â‚¹%.2f\n", bill);
    return 0;
}
