Program 1: To check whether the given number is positive or not
#include<stdio.h>
void main(){
        int num;

        printf("Enter a number: ");
        scanf("%d",&num);
        if(num>0){
                printf("%d is a positive number: \n",num);
        }else if(num<0){
                printf("%d is a negative nunber: \n",num);
        }else{
                printf("Number is zero");
        }
}
-------------------------------------------------------------------------
Program 2: To check whether the given number is divisible by 5 or 10.
#include <stdio.h>

int main(){
        int num;
        printf("Enter a num: ");
        scanf("%d",&num);

        if(num%5==0 || num%10==0){
                printf("Number is divisible\n");
        }else{
                printf("Number is not divisible\n");
        }

        return 0;
}
-------------------------------------------------------------------------
Program 3: To check whether the given number is multiple of 7 or not, also
strictly check the number is greater than 21 or less than 21
#include <stdio.h>
void main(){
        int num;

        printf("Enter a num: ");
        scanf("%d", &num);

        if(num%7==0){
                printf("The num is multiple of 7 \n");
        }else{
                printf("The num is not multiple of 7 \n");
        }

        if(num>21){
                printf("Number is greater than 21 \n");
        }else if(num<21){
                printf("Num is less than 21 \n");
        } else{
                printf("The num is equal to 21 \n");
        }


}
