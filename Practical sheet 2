Program 4: To check whether eligible for voting or not
#include<stdio.h>
void main(){
        int age;
        printf("Enter your age: \n");
        scanf("%d",&age);

        if(age>=18){
                printf("Eligible for voting..\n");
        }else{
                printf("Not eligible for voting..\n");
        }
}
--------------------------------------------------------------
Program 5: To check whether the character is in uppercase or lowercase
#include <ctype.h>

int main(){
        char ch;

        printf("Enter a character: ");
        scanf("%c",&ch);

        if(isupper(ch)){
                printf("The character %c is in uppercase: \n",ch);
        }else{
                printf("The character %c is in lowercase: \n",ch);
        }
        return 0;
}

