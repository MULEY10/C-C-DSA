Program 4: To check whether eligible for voting or not
#include<stdio.h>
void main(){
        int age;
        printf("Enter your age: \n");
        scanf("%d",&age);

        if(age>=18){
                printf("Eligible for voting..\n");
        }else{
                printf("Not eligible for voting..\n");
        }
}
--------------------------------------------------------------
Program 5: To check whether the character is in uppercase or lowercase
#include <ctype.h>

int main(){
        char ch;

        printf("Enter a character: ");
        scanf("%c",&ch);

        if(isupper(ch)){
                printf("The character %c is in uppercase: \n",ch);
        }else{
                printf("The character %c is in lowercase: \n",ch);
        }
        return 0;
}

----------------------------------------------------------------
Program 6: to check whether the given number is divisible by 3 and 7
#include <stdio.h>

int main(){
        int num;

        printf("Enter a number: ");
        scanf("%d", &num);

        if(num%3==0 && num%7==0){
                printf("Number is divisible by both 3 and 7 \n",num);
        }else{
                printf("Not divisible by both\n",num);
        }
        return 0;
}
